<header id="header" class="header" role="banner" aria-label="{{ 'Site header'|t}}">
    {% block head %}
        {% if page.secondary_menu or page.top_header or page.top_header_form %}
            <nav{{ navbar_top_attributes }}>
                {% if container_navbar %}
                <div class="container">
                    {% endif %}
                    {{ page.secondary_menu }}
                    {{ page.top_header }}
                    {% if page.top_header_form %}
                        <div class="form-inline navbar-form ml-auto">
                            {{ page.top_header_form }}
                        </div>
                    {% endif %}
                    {% if container_navbar %}
                </div>
                {% endif %}
            </nav>
        {% endif %}
        {% if page.second_top_header %}
            <nav class="navbar header_top d-none d-lg-block">
                <div class="container">
                    {{ page.second_top_header }}
                </div>
            </nav>
        {% endif %}
        <nav{{ navbar_attributes.addClass(nav_classes).removeClass('navbar-expand-lg') }}>
            {#{% if container_navbar %}#}
            <div class="container-mobile container ">
                {#{% endif %}#}
                {{ page.header }}
                {% if page.primary_menu or page.header_form %}
                    <div class="main-menu-mobile">
                        <button class="navbar-toggler navbar-toggler-right hamburger-btn" type="button" data-toggle="collapse" data-target="#CollapsingMainMenuNavbar" aria-controls="CollapsingMainMenuNavbar" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="CollapsingMainMenuNavbar">
                            {{ page.primary_menu }}
                            {% if page.header_form %}
                                <div class="form-inline navbar-form justify-content-end">
                                    {{ page.header_form }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                {% if sidebar_collapse %}
                    <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#CollapsingLeft" aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation"></button>
                {% endif %}
                {#{% if container_navbar %}#}
            </div>
            {#{% endif %}#}
        </nav>
    {% endblock %}
</header>